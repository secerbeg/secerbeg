<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Secerbegovic.html</welcome-file>
  </welcome-file-list>
  
  
    <!-- Servlets -->
  <servlet>
    <servlet-name>dbConnectionImpl</servlet-name>
    <servlet-class>mainview.server.DBConnectionImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>dbConnectionImpl</servlet-name>
    <url-pattern>/secerbegovic/db</url-pattern>
  </servlet-mapping>
  
</web-app>
